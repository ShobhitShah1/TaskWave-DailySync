{
  "expo": {
    "name": "DailySync",
    "slug": "DailySync",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "ios": {
      "supportsTablet": false,
      "runtimeVersion": {
        "policy": "appVersion"
      }
    },
    "splash": {
      "image": "./assets/Images/Splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "android": {
      "package": "com.taskwave.dailysync",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "runtimeVersion": "1.0.0"
    },
    "plugins": [
      "expo-font",
      [
        "expo-av",
        {
          "microphonePermission": "Allow to access your microphone."
        }
      ],
      [
        "react-native-permissions",
        {
          "iosPermissions": ["Microphone"]
        }
      ],
      [
        "expo-quick-actions",
        {
          "androidIcons": {
            "wave_icon": {
              "foregroundImage": "./assets/Icons/ic_wave.png",
              "backgroundColor": "#151616"
            },
            "plus_icon": {
              "foregroundImage": "./assets/Icons/ic_plus.png",
              "backgroundColor": "#151616"
            }
          }
        }
      ]
    ]
  }
}
