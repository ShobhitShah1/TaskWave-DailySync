{
  "expo": {
    "name": "DailySync",
    "slug": "DailySync",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Images/Dailysync_Android.png",
    "userInterfaceStyle": "light",
    "ios": {
      "supportsTablet": false,
      "runtimeVersion": {
        "policy": "appVersion"
      }
    },
    "splash": {
      "image": "./assets/Images/Splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/Images/Dailysync_Android.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.taskwave.dailysync",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "runtimeVersion": "1.0.0",
      "splash": {
        "image": "./assets/Images/Splash.png",
        "resizeMode": "contain",
        "backgroundColor": "#FFFFFF"
      }
    },
    "plugins": [
      "expo-font",
      [
        "expo-av",
        { "microphonePermission": "Allow to access your microphone." }
      ],
      [
        "react-native-permissions",
        {
          "iosPermissions": ["Microphone"]
        }
      ]
    ]
  }
}
